# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token

# API Configuration
WHATSAPP_API_VERSION=v24.0
WHATSAPP_API_URL=https://graph.facebook.com

# Webhook Configuration
WHATSAPP_WEBHOOK_ENABLED=true
WHATSAPP_WEBHOOK_PATH=whatsapp/webhook

# AI Integration (Optional)
WHATSAPP_AI_PROVIDER=openai
# WHATSAPP_AI_PROVIDER=gemini
# WHATSAPP_AI_PROVIDER=null

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=500
GEMINI_TEMPERATURE=0.7

# Chatbot Configuration
WHATSAPP_CHATBOT_ENABLED=true
WHATSAPP_SESSION_TIMEOUT=1800
WHATSAPP_DEFAULT_LANGUAGE=en

# Flow Configuration
WHATSAPP_FLOW_VERSION=7.3
WHATSAPP_FLOW_ENCRYPTION_ENABLED=false

# Storage Configuration
WHATSAPP_MESSAGES_RETENTION_DAYS=90
WHATSAPP_MEDIA_DISK=local

# Rate Limiting
WHATSAPP_RATE_LIMIT_ENABLED=true
WHATSAPP_RATE_LIMIT_MAX_ATTEMPTS=60
WHATSAPP_RATE_LIMIT_DECAY_MINUTES=1

# Logging
WHATSAPP_LOGGING_ENABLED=true
WHATSAPP_LOG_CHANNEL=stack
WHATSAPP_LOG_LEVEL=info